<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_weather"
    tools:context=".WeatherFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="#3f51b5"
        android:orientation="horizontal"
        android:padding="4px">
        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="USTH Weather"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="65px"
            android:textStyle="bold"
            android:paddingLeft="36px"
            android:paddingTop="22px"
            android:paddingBottom="22px"
            android:paddingRight="22px" />
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="600px"
        android:layout_marginTop="185px"
        android:layout_marginBottom="45px"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:padding="45px"
        android:background="#B0E57C">
        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12Â°C"
            android:textColor="@color/black"
            android:textSize="55px"
            />
        <TextView
            android:id="@+id/weaCond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloudy"
            android:textColor="@color/black"
            android:textSize="55px"
            android:layout_marginTop="55px"
            />
        <TextView
            android:id="@+id/locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paris"
            android:textColor="@color/black"
            android:textSize="55px"
            android:layout_gravity="end"
            />
        <ImageView android:layout_width="500px" android:layout_height="500px"
            android:layout_gravity="center"
            android:src="@drawable/cloudy"/>

    </FrameLayout>
</RelativeLayout>
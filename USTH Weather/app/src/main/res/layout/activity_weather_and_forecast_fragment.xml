<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_weather_and_forecast"
    tools:context=".WeatherAndForecastFragment"
    android:background="#F8F8F8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="#3f51b5"
        android:orientation="horizontal"
        android:padding="4px">
        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="USTH Weather"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="65px"
            android:textStyle="bold"
            android:paddingLeft="36px"
            android:paddingTop="22px"
            android:paddingBottom="22px"
            android:paddingRight="22px" />
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="600px"
        android:layout_marginTop="185px"
        android:layout_marginBottom="45px"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:padding="45px"
        android:background="#B0E57C">
        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12°C"
            android:textColor="@color/black"
            android:textSize="55px"
            />
        <TextView
            android:id="@+id/weaCond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloudy"
            android:textColor="@color/black"
            android:textSize="55px"
            android:layout_marginTop="55px"
            />
        <TextView
            android:id="@+id/locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paris"
            android:textColor="@color/black"
            android:textSize="55px"
            android:layout_gravity="end"
            />
        <ImageView android:layout_width="500px" android:layout_height="500px"
            android:layout_gravity="center"
            android:src="@drawable/cloudy"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="45px"
        android:paddingTop="835px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:background="#5403A9F4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/day1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="38px"
                android:text="Mon"
                android:textColor="@color/black"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/weaImg1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/sun" />

            <LinearLayout
                android:layout_width="370px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/weaCond1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="30px"
                    android:paddingTop="5px"
                    android:textColor="@color/black"
                    android:text="Sunny" />

                <TextView
                    android:id="@+id/temp1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="30px"
                    android:paddingTop="5px"
                    android:textColor="@color/black"
                    android:text="24°C - 31°C" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
